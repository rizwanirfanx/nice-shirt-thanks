tafields.custom.cc_handle -%}\n        {%- assign current_product_handle = product.handle -%} <!-- Get current product's handle -->\n        \n        {%- if tnsts_id != blank or cc_handle_id != blank -%} <!-- Check if either metafield exists -->\n            <h3>Brand<\/h3> <!-- Title above the buttons -->\n        {%- endif -%}\n\n        <div class=\"product-variant-buttons\">\n            {%- if tnsts_id != blank -%}\n                {%- assign tnsts_product = all_products[tnsts_id] -%}\n                {%- if tnsts_product -%}\n                    <button \n                        class=\"variant-button nice-shirt-button \n                        {%- if tnsts_product.handle == current_product_handle -%} selected disabled2 {%- endif -%}\"\n                        {%- if tnsts_product.handle != current_product_handle -%} \n                        onclick=\"window.location.href='\/products\/{{ tnsts_product.handle }}';\" \n                        {%- endif -%}>\n                        The Nice Shirt\n                    <\/button>\n                {%- endif -%}\n            {%- endif -%}\n\n            {%- if cc_handle_id != blank -%}\n                {%- assign cc_product = all_products[cc_handle_id] -%}\n                {%- if cc_product -%}\n                    <button \n                        class=\"variant-button comfort-color-button \n                        {%- if cc_product.handle == current_product_handle -%} selected disabled2 {%- endif -%}\"\n                        {%- if cc_product.handle != current_product_handle -%} \n                        onclick=\"window.location.href='\/products\/{{ cc_product.handle }}';\" \n                        {%- endif -%}>\n                        Comfort Colors\n                    <\/button>\n                {%- endif -%}\n            {%- endif -%}\n        <\/div>\n    <\/div>\n<\/body>\n<\/html>"}},"variant_picker":{"type":"variant_picker","settings":{"picker_type":"button"}},"quantity_selector":{"type":"quantity